<% if (site.tags.length){ %>
  <div class="widget-wrap">
    <!-- <h3 class="widget-title"><%= __('tagcloud') %></h3> -->
    <div class="widget tagcloud">
      <%- tagcloud(site.tags, {
        min_font: 11,
        max_font: 36,
        amount: 100,
        orderby: 'count',
        color: true,
        start_color: '#9900FF',
        end_color: '#FF0000'
      }) %>
    </div>
  </div>
<% } %>